
{% extends 'GbCreationWallBundle:Admin:comments.layout.html.twig' %}

{% block comment_pagination %} 
<div class="pagination pagination-centered">
  <ul>
    {% for p in range(1, last_page) %}
      <li{% if p == current_page %} class="active"{% endif %}>
        <a href="{{ path('gb_creation_admin_comments_show', {'page':p}) }}">{{ p }}</a>
      </li>
    {% endfor %}
  </ul>
  <ul>
  <li><a href="{{ path('gb_creation_admin_comments_show_noPagination') }}"><i class="icon-th-list" alt="Voir sans Pagination"></i></a> </li>
  </ul>
</div>
{% endblock %}
