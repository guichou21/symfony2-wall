        <!-- news -->
        <div class="wrapper wrapper-style2">
            {{ render(controller("GbCreationHomeBundle:Home:news")) }}
        </div>

        <!-- Portfolio -->
        <div class="wrapper wrapper-style3">
            {{ render(controller("GbCreationHomeBundle:Home:portfolio")) }}
